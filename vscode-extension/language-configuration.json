{
  "comments": {
    "lineComment": "--",
    "blockComment": ["--[[", "]]"]
  },
  "brackets": [
    ["{", "}"],
    ["[", "]"],
    ["(", ")"],
    ["<", ">"]
  ],
  "autoClosingPairs": [
    { "open": "{", "close": "}" },
    { "open": "[", "close": "]" },
    { "open": "(", "close": ")" },
    { "open": "\"", "close": "\"", "notIn": ["string"] },
    { "open": "'", "close": "'", "notIn": ["string"] },
    { "open": "[[", "close": "]]" },
    { "open": "<", "close": ">", "notIn": ["string", "comment"] }
  ],
  "surroundingPairs": [
    { "open": "{", "close": "}" },
    { "open": "[", "close": "]" },
    { "open": "(", "close": ")" },
    { "open": "\"", "close": "\"" },
    { "open": "'", "close": "'" },
    { "open": "<", "close": ">" }
  ],
  "folding": {
    "markers": {
      "start": "^\\s*--\\s*#?region\\b",
      "end": "^\\s*--\\s*#?endregion\\b"
    }
  },
  "indentationRules": {
    "increaseIndentPattern": "^\\s*(else|elseif|for|function|if|repeat|while|local\\s+function)\\b.*$|.*\\bthen\\s*$|.*\\bdo\\s*$|\\s*<[a-zA-Z][^/>]*>\\s*$",
    "decreaseIndentPattern": "^\\s*(end|else|elseif|until)\\b|^\\s*</[a-zA-Z]"
  },
  "wordPattern": "[a-zA-Z_][a-zA-Z0-9_]*"
}
